<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cura" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cool_blue</item>
        <item name="colorPrimaryVariant">@color/cool_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Cura.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="standardButton">
        <item name="strokeWidth">5dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="invertStandardButton">
        <item name="strokeWidth">5dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/cool_blue</item>
    </style>

    <style name="Theme.Cura.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cura.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>